<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppContainer</title>
    <link rel="icon" type="image/x-icon" href="media/videofiligranı.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/todo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppContainer.styles.css" asp-append-version="true" />
</head>
<body>
    
    <div class="container">



@*----------------------------------------------Başlık----------------------------------------------*@
        <div class="row justify-content-around">
            <header class="col-5 mt-5">
                <h1>To Do List</h1>
            </header>
        </div>


@*----------------------------------------------Sayfa----------------------------------------------*@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



@*----------------------------------------------Footer----------------------------------------------*@
    <footer class="border-top footer text-muted text-center fixed-bottom p-3">
        <div class="container">
            &copy; 2023 - AppContainer - <a class="ftrtext" asp-area="" asp-controller="Home" asp-action="About">About</a> - <a class="ftrtext" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>




@*----------------------------------------------Scriptler----------------------------------------------*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/todo.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



